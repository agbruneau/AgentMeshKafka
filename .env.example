# =============================================================================
# kafka-eda-lab - Configuration Environnement
# =============================================================================
# Copiez ce fichier vers .env et ajustez les valeurs si nécessaire
# cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# Kafka
# -----------------------------------------------------------------------------
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID_PREFIX=kafka-eda-lab

# -----------------------------------------------------------------------------
# Schema Registry
# -----------------------------------------------------------------------------
SCHEMA_REGISTRY_URL=http://localhost:8081

# -----------------------------------------------------------------------------
# Services - Ports
# -----------------------------------------------------------------------------
DASHBOARD_PORT=8080
QUOTATION_PORT=8081
SOUSCRIPTION_PORT=8082
RECLAMATION_PORT=8083
SIMULATOR_PORT=8084

# -----------------------------------------------------------------------------
# Observabilité - Ports
# -----------------------------------------------------------------------------
GRAFANA_PORT=3000
PROMETHEUS_PORT=9090
JAEGER_PORT=16686
LOKI_PORT=3100
KAFKA_UI_PORT=8090

# -----------------------------------------------------------------------------
# Base de données
# -----------------------------------------------------------------------------
QUOTATION_DB_PATH=./data/quotation.db
SOUSCRIPTION_DB_PATH=./data/souscription.db
RECLAMATION_DB_PATH=./data/reclamation.db

# -----------------------------------------------------------------------------
# Simulation
# -----------------------------------------------------------------------------
SIMULATOR_DEFAULT_SPEED=5
SIMULATOR_DEFAULT_SCENARIO=NORMAL

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_FORMAT=json
